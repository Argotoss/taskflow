# Global application configuration
NODE_ENV=development
PORT=3000
CLIENT_URL=http://localhost:5173
API_URL=http://localhost:3000/api

# Database
DATABASE_URL=postgresql://taskflow:taskflow@localhost:5432/taskflow?schema=public

# JWT
JWT_ACCESS_TOKEN_SECRET=replace-me-with-a-secure-random-string
JWT_ACCESS_TOKEN_TTL=900s
JWT_REFRESH_TOKEN_SECRET=replace-me-with-a-secure-random-string
JWT_REFRESH_TOKEN_TTL=7d

# AWS / S3-compatible storage
AWS_REGION=eu-central-1
AWS_S3_BUCKET=taskflow-local
AWS_S3_PUBLIC_URL=http://localhost:9000/taskflow-local
AWS_ACCESS_KEY_ID=taskflow
AWS_SECRET_ACCESS_KEY=taskflow-secret

# Seed helpers
SEED_USER_PASSWORD=Password123!
