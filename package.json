{
  "name": "taskflow",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "check": "pnpm lint && pnpm test && pnpm typecheck",
    "format": "pnpm dlx prettier --write \"**/*.{ts,tsx,js,json,md,yml,yaml}\"",
    "build": "pnpm -r build",
    "dev:backend": "pnpm --filter backend start:dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "test:frontend": "pnpm --filter frontend test",
    "test:backend:e2e": "pnpm --filter backend test:e2e"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md,yml,yaml}": "pnpm dlx prettier --write",
    "apps/backend/**/*.ts": "pnpm --filter backend exec eslint --max-warnings=0 --cache --no-error-on-unmatched-pattern",
    "apps/frontend/src/**/*.{ts,tsx}": "pnpm --filter frontend exec eslint --max-warnings=0 --cache --no-error-on-unmatched-pattern"
  }
}
