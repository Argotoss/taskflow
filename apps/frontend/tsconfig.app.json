{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo/app.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@taskflow/shared": ["../../packages/shared/src/index.ts"],
      "@taskflow/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src"]
}
